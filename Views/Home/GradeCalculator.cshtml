@{
    ViewBag.Title = "Assignment 2";
    ViewBag.Name = "Calculate Your Grade for IS 413";
}

@model Assignment2.Models.GradeModel

<body>
    <!--Grade Calculator Form for IS 413-->
    <h3>Grade Calculator</h3>
    <form method="post">
        <label>Assignments:</label>
        <input type="number" id="assignments" asp-for="assignments"/>
        <br /><br />
        <label>Group Project:</label>
        <input type="number" id="projects" asp-for="project"/>
        <br /><br />
        <label>Quizzes:</label>
        <input type="number" id="quizzes" asp-for="quizzes"/>
        <br /><br />
        <label>Exams:</label>
        <input type="number" id="exams" asp-for="exams"/>
        <br /><br />
        <label>INTEX:</label>
        <input type="number" id="intex" asp-for="intex"/>
        <br /><br />
        <input type="submit" value="Submit Percentages" id="submitButton" />
        <div class="valid" asp-validation-summary="All"></div>
    </form>
</body>